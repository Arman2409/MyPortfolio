{
  "compilerOptions": {
    "target": "ES2022",                                       
    "jsx": "react-jsx",  
    "module": "ESNext",                              
    "rootDir": "./src",                                  
    "moduleResolution": "Bundler",         
    "resolveJsonModule": true,                        
    "outDir": "./dist", 
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,           
    "strict": true, 
    "skipLibCheck": true
  }
}
